.aside
  background-color #000
  height 100%
  width 254px
  padding 0 28px
  transition: all 300ms ease
  overflow hidden
  float left
  position fixed
  .logo-small
    display none

.aside-closed
  .content
    margin-left 78px
  .aside
    width 46px
    padding 0 16px
    .logo-small
      display block
    .logo-full,
    .nav
      display none


.logo
  display block
  padding-top 28px
  margin-bottom 28px


.nav
  font-size 21px
  line-height 36px
  width 254px

.nav-item
  &.active
    font-weight 700

.nav-list
  margin 0
  padding 0
  font-family "Open Sans"
  font-weight 300
  list-style-type none

.nav-link
  color #fff
  text-decoration none

