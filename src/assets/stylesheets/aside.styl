.aside
  background rgba(0,0,0,1)
  height 100%
  display table-cell
  position relative
  vertical-align top
  .logo-small
    display none


.logo
  display block
  padding-top 28px
  margin-bottom 28px


.nav
  font-size 21px
  line-height 36px
  width 254px

.nav-item
  &.active
    font-weight 700

.nav-list
  margin 0
  padding 0
  font-family "Open Sans"
  font-weight 300
  list-style-type none

.nav-link
  color #fff
  text-decoration none
  &:hover
    text-decoration underline


.route-summary
  position absolute
  bottom 28px
  width 254px
  a
    color #8e8e8e
    font-size 10px
    text-decoration none
    i
      font-size 12px
      position relative
      top 1px
  p
    font-size 12px
    line-height 14px
    margin 0 0 14px

.route-driver-name
  font-size 36px
  margin 0 0 30px

.route-namelink
  display block
  margin-bottom 30px
  .icon-chain
    position relative
    top 2px

.route-service-links
  ul
    margin 0
    padding 0
    list-style-type none
  li
    display inline-block
    margin-right 20px
