.driver
  background-size cover
  background-repeat no-repeat
  background-position center center

.driver-gallery
  position relative
  height 100%
  img
    display inline-block
    border: 3px solid #fff
  i
    font-size 96px
    position relative
    top -10px

.driver-nav
  position absolute
  height 100px
  bottom 26px
  opacity 0.4
  transition: all 300ms ease
  text-decoration none
  color #fff
  &:hover
    opacity 1

.prev-driver
  left -12px
  i
    margin-right -20px

.next-driver
  right -12px
  i
    margin-left -20px
    &:before
      transform: rotate(180deg)
